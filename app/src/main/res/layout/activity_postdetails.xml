<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layoutDirection="rtl">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/realjaket"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp">

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم المنتج :"
                android:textSize="20dp"/>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جاكيت رجالى جلد"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وصف المنتج :"
                android:textSize="20dp"/>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جاكيت صنع مصرى تماما و بسعر منافس و كميات محدودة جدا"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المقاسات المتاحة :"
                android:textSize="20dp"/>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL/XXL"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="السعر :"
                android:textSize="20dp"/>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 LE"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الكمية المتاحة :"
                android:textSize="20dp"/>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="20dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit"
        android:layoutDirection="rtl"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edit">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_black_24dp"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="احمد محمد"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العرض جيد جدا و لاكن السعر مرتفع"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعجاب"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رد"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="منز 3 دقائق"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edit">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_black_24dp"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سعيد سالم"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هل هناك الوان متوفرة اخرى من فضلك ؟"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعجاب"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رد"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="منذ 1 دقائق"
                    android:textColor="@color/myAccentColor"
                    android:layout_margin="10dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>