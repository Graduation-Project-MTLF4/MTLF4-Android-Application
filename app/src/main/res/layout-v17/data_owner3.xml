<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/receipt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_receipt_black_24dp" />


    <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
        android:id="@+id/textViewWithFont4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewWithFont3"
        android:layout_alignStart="@+id/textViewWithFont3"
        android:layout_below="@+id/textViewWithFont3"
        android:gravity="center"
        android:text="@string/sagel_bianat_ldman"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
        android:id="@+id/textViewWithFont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receipt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/thank"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/follow_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:text="@string/go_to_app"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:padding="10dp"/>


</RelativeLayout>