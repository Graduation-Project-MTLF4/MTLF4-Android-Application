<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/market"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



         <ImageView
             android:id="@+id/icon"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/ic_receipt_black_24dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="40dp" />


        <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/sagel_bianat"
            android:layout_below="@+id/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewWithFont" />

        <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@android:color/white"
            android:text="@string/sagel_bianat_wzawed"
            android:layout_below="@+id/textViewWithFont"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewWithFont2" />

        <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/sagel_bianat_da5al"
            android:layout_below="@+id/textViewWithFont2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewWithFont3" />


        <Button
            android:id="@+id/follow_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:text="@string/follow"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:padding="10dp"/>

        <amirahmed.com.mtlf4androidapplication.Utils.TextViewWithFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/sagel_bianat_ldman"
            android:id="@+id/textViewWithFont4"
            android:layout_below="@+id/textViewWithFont3"
            android:layout_alignLeft="@+id/textViewWithFont3"
            android:layout_alignStart="@+id/textViewWithFont3" />
    </RelativeLayout>
</RelativeLayout>